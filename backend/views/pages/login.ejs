        //     var centang = document.getElementById('customCheck');

        //     if (centang.checked) {
        //         tombol.removeAttribute('disabled');
        //     } else {
        //         tombol.setAttribute('disabled', 'disabled');
        //     }
        // }
        $(document).ready(function(){
            const timerAlert = $('.alert').text();
            if( timerAlert !== '') {
                setTimeout(function(){
                    $('.alert').fadeOut('slow')
                }, 3000);
            }
        });
    </script>

</body>

</html>