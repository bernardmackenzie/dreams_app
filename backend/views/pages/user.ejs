
<%- include('../components/head.ejs') %>
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <div class="row-cols-1 mb-4">
                <h5 class="mb-0 text-gray-800 font-weight-bold">Daftar User</h5>
            </div>
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <!-- <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#createDestination">
                        <i class="fas fa-plus-circle fa-sm text-white"></i> Tambah Data
                        </button> -->
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Nama User</th>
                                    <th>Nomor Telepon</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                <% for( let i=0; i < user.length; i++ ) { %>
                                    <tr>
                                        <td>
                                            <%= i+1 %>
                                        </td>
                                        <td>
                                            <%= user[i].fullname %>
                                        </td>
                                        <td>
                                            <%= user[i].email %>
                                        </td>
                                        <td>
                                            <%= user[i].phone %>
                                        </td>
                                        <td>
                                            <%= user[i].role %>
                                        </td>

                                        <td>
                                            <button type="button" title="edit"
                                                class="btn btn-sm btn-primary text-white btn-edit"
                                                data-id="<%= user[i]._id %>" data-fullname="<%= user[i].fullname %>"
                                                data-email="<%= user[i].email %>"
                                                data-phone="<%= user[i].phone %>"
                                                data-role="<%= user[i].role %>">
                                                <i class="fa fa-edit"></i>
                                                
                                            </button>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->
    <%- include('../components/bottom.ejs') %>
